		"**/.ssh": true,
		"**/.ssl": true,
		"**/.sudo_as_admin_successful": true,
		"**/.supabase": true,
		"**/.wget-hsts": true,
		"**/.vscode": true,
		"**/.vscode-remote-containers": true,
		"**/.vscode-server": true,
		"**/.vs": true
	},

