{
	"editor.rulers": [80],

	"C_Cpp.vcpkg.enabled": true,
  "C_Cpp.autoAddFileAssociations": true,
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

  "cmake.configureOnEdit": false,
	"cmake.configureOnOpen": false,
	"cmake.automaticReconfigure": false,

	"cmake.setBuildTypeOnMultiConfig": true,
	"cmake.loadCompileCommands": true,
	"cmake.useCMakePresets": "always",
	"cmake.allowUnsupportedPresetsVersions": true,

	"cmake.cmakePath": "cmake",

	"cmake.sourceDirectory": "${workspaceFolder}",
	"cmake.buildDirectory": "${workspaceFolder}/build",
	"cmake.installPrefix": "${workspaceFolder}/.local",
	"cmake.generator": "Unix Makefiles",
	"cmake.configureSettings": {
		// "VCPKG_ROOT": "${workspaceFolder}/vcpkg",
		"VCPKG_MANIFEST_MODE": false,
		"VCPKG_PREFER_SYSTEM_INSTALLED_BINARIES": true,
		"CMAKE_TOOLCHAIN_FILE": "~/vcpkg/scripts/buildsystems/vcpkg.cmake",
		// "CMAKE_MAKE_PROGRAM": "make",
		// "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
		// "CMAKE_BUILD_TYPE": "Debug",
		"CMAKE_C_COMPILER_LAUNCHER": "ccache",
		"CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
		"STONEYDSP_BIQUADS_BUILD_TESTS": true
	},
	"cmake.debugConfig": {
		"cwd": "${workspaceFolder}",
		"symbolSearchPath": "${workspaceFolder}",
		"miDebuggerPath": "/usr/bin/gdb",
		"MIMode": "gdb",
		"console": "newExternalWindow",
		"stopAtEntry": false,
		"logging": {
			"engineLogging": false,
			"exceptions": true,
			"moduleLoad": true,
			"trace": false,
			"traceResponse": false,
			"programOutput": true
		}
	},

	"json.format.enable": true,
	"json.schemaDownload.enable": true,
	"json.validate.enable": true,
	"json.schemas": [
		{
			"fileMatch": [
				"CMakePresets.*.json"
			],
			"url": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json"
		},
		{
			"fileMatch": [
				"vcpkg.json"
			],
			"url": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json"
		},
		{
			"fileMatch": [
				"vcpkg-configuration.json"
			],
			"url": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg-configuration.schema.json"
		}
	],

	"doxdocgen.generic.useGitUserName": true,
  "doxdocgen.generic.useGitUserEmail": true,

	"terminal.integrated.profiles.windows": {
		"MSYS2 UCRT64": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -ucrt64"
			]
		},
		"MSYS2 MINGW64": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -mingw64"
			]
		},
		"MSYS2 CLANG64": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -clang64"
			]
		},
		"MSYS2 MINGW32": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -mingw32"
			]
		},
		"MSYS2 CLANG32": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -clang32"
			]
		},
		"MSYS2 CLANGARM64": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -clangarm64"
			]
		},
		"MSYS2 MSYS64": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -msys2"
			]
		}
  },

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
