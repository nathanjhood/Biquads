{
	"version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
	"configurePresets": [
		{
			"name": "linux-base",
			"hidden": true,
			"displayName": "Linux-base configuration",
			"description": "This build is only available on Linux",
			"generator": "Ninja",
      "binaryDir": "${sourceDir}/Builds",
			"installDir": "${sourceDir}/Installed",
			"toolchainFile": "$penv{HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake",
			"environment": {
				"DISPLAY": ":0",
				"VCPKG_DEFAULT_TRIPLET": "x64-linux",
				"VCPKG_DEFAULT_HOST_TRIPLET": "x64-linux"
			},
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        }
			},
			"errors": {
				"deprecated": false,
				"dev": false
			},
			"warnings": {
				"deprecated": false,
				"dev": false,
				"systemVars": false,
				"uninitialized": false,
				"unusedCli": false
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": [ "Linux" ],
					"intelliSenseMode": "linux-gcc-x64",
					"intelliSenseOptions": {
						"useCompilerDefaults": true,
						"additionalCompilerArgs": []
					}
				},
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
			 	}
			}
		},
		{
      "name": "linux-base-multi-config",
			"hidden": true,
      "inherits": "linux-base",
      "displayName": "Ninja Multi-Config",
      "description": "Default Linux build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config"
    },

		{
      "name": "unix-makefiles",
			"hidden": true,
      "inherits": "linux-base",
      "displayName": "Unix Makefiles",
      "description": "Default build using Unix Makefiles generator",
      "generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/Builds/LinuxMakefile",
			"environment": {},
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": {
					"type": "PATH",
					"value": "make"
				}
			}
    },

		{
			"name": "linux-make-debug",
			"inherits": "unix-makefiles",
			"displayName": "Make (Debug)",
			"description": "Default Linux Debug build using Unix Makefiles generator",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Debug"
				},
				"CMAKE_INTDIR": {
					"type": "STRING",
					"value": "Debug"
				}
			}
		},

		{
			"name": "linux-make-release",
			"inherits": "unix-makefiles",
			"displayName": "Make (Release)",
			"description": "Default Linux Release build using Unix Makefiles generator",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Release"
				},
				"CMAKE_INTDIR": {
					"type": "STRING",
					"value": "Release"
				}
			}
		},
		{
			"name": "linux-ninja-debug",
			"inherits": "linux-base",
			"displayName": "Ninja (Debug)",
			"description": "Default Linux Debug build using Ninja generator",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Debug"
				},
				"CMAKE_INTDIR": {
					"type": "STRING",
					"value": "Debug"
				}
			}
		},
		{
			"name": "linux-ninja-release",
			"inherits": "linux-base",
			"displayName": "Ninja (Release)",
			"description": "Default Linux Release build using Ninja generator",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Release"
				},
				"CMAKE_INTDIR": {
					"type": "STRING",
					"value": "Release"
				}
			}
		},

		{
			"name": "linux-ninja-multi-config",
			"inherits": "linux-base-multi-config",
			"displayName": "Ninja Multi-Config",
			"description": "Default Linux Release build using Ninja Multi-Config generator",
			"cacheVariables": {
				"CMAKE_CONFIGURATION_TYPES": {
					"type": "STRING",
					"value": "Debug;Release"
				}
			}
		}
  ],

	"buildPresets": [
		{
			"displayName": "Linux",
			"name": "linux-base",
			"hidden": true,
			"targets": [
				"all",
				"install",
				"clean",
				"juce_vst3_helper",

				"Biquads_Audio_Plugin",
				"Biquads_Audio_Plugin_Standalone",
				"Biquads_Audio_Plugin_VST3",
				"Biquads_Audio_Plugin_All"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "linux-default",
			"hidden": true,
			"inherits": "linux-base",
			"verbose": false
		},

		{
			"displayName": "Debug",
			"inherits": "linux-default",
			"configuration": "Debug",
			"configurePreset": "linux-make-debug",
			"name": "linux-make-debug"
		},
		{
			"displayName": "Debug (Verbose)",
			"inherits": "linux-make-debug",
			"name": "linux-make-debug-verbose",
			"verbose": true
		},
		{
			"displayName": "Release",
			"inherits": "linux-base",
			"configuration": "Release",
			"configurePreset": "linux-make-release",
			"name": "linux-make-release"
		},
		{
			"displayName": "Release (Verbose)",
			"inherits": "linux-make-release",
			"name": "linux-make-release-verbose",
			"verbose": true
		},

		{
			"displayName": "Debug",
			"inherits": "linux-base",
			"configuration": "Debug",
			"configurePreset": "linux-ninja-debug",
			"name": "linux-ninja-debug"
		},
		{
			"displayName": "Debug (Verbose)",
			"inherits": "linux-ninja-debug",
			"name": "linux-ninja-debug-verbose",
			"verbose": true
		},
		{
			"displayName": "Release",
			"inherits": "linux-base",
			"configuration": "Release",
			"configurePreset": "linux-ninja-release",
			"name": "linux-ninja-release"
		},
		{
			"displayName": "Release (Verbose)",
			"inherits": "linux-ninja-release",
			"name": "linux-ninja-release-verbose",
			"verbose": true
		},


		{
			"displayName": "Debug",
			"inherits": "linux-base",
			"configuration": "Debug",
			"configurePreset": "linux-ninja-multi-config",
			"name": "linux-ninja-multi-config-debug"
		},
		{
			"displayName": "Release",
			"inherits": "linux-base",
			"configuration": "Release",
			"configurePreset": "linux-ninja-multi-config",
			"name": "linux-ninja-multi-config-release"
		},
		{
			"displayName": "Debug (Verbose)",
			"inherits": "linux-ninja-multi-config-debug",
			"name": "linux-ninja-multi-config-debug-verbose",
			"verbose": true
		},
		{
			"displayName": "Release (Verbose)",
			"inherits": "linux-ninja-multi-config-release",
			"name": "linux-ninja-multi-config-release-verbose",
			"verbose": true
		}
	],
	"testPresets": [
		{
      "name": "linux-base",
			"hidden": true,
      "output": {
				"outputOnFailure": true,
				"verbosity": "default"
			},
      "execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
    },
		{
      "name": "linux-ninja-multi-config-debug",
			"hidden": false,
			"displayName": "Debug",
			"description": "Linux Test preset for Debug build using Ninja Multi-Config generator.",
      "configurePreset": "linux-ninja-multi-config",
			"inherits": "linux-base",
			"configuration": "Debug"
    },
		{
      "name": "linux-ninja-multi-config-release",
			"hidden": false,
			"displayName": "Release",
			"description": "Linux Test preset for Release build using Ninja Multi-Config generator.",
      "configurePreset": "linux-ninja-multi-config",
			"inherits": "linux-base",
			"configuration": "Release"
    }
	],
	"packagePresets": [
		{
			"name": "linux-base",
			"hidden": true,
			"configurePreset": "linux-base",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},
			"generators": [
				"TGZ"
			]
		},
		{
			"name": "linux-ninja-multi-config-source",
			"hidden": false,
			"displayName": "Source",
			"description": "Linux Package Preset for source files using Ninja Multi-Config generator.",
			"inherits": "linux-base",
			"configurePreset": "linux-ninja-multi-config",
			"configFile": "${sourceDir}/Builds/CPackSourceConfig.cmake"
		},
		{
			"name": "linux-ninja-multi-config-debug",
			"hidden": false,
			"displayName": "Build (Debug)",
			"description": "Linux Package Preset for Debug build using Ninja Multi-Config generator.",
			"inherits": "linux-base",
			"configurePreset": "linux-ninja-multi-config",
			"configFile": "${sourceDir}/Builds/CPackConfig.cmake",
			"configurations": ["Debug"],
			"output": {
				"debug": true,
				"verbose": true
			}
		},
		{
			"name": "linux-ninja-multi-config-release",
			"hidden": false,
			"displayName": "Build (Release)",
			"description": "Linux Package Preset for Release build using Ninja Multi-Config generator.",
			"inherits": "linux-base",
			"configurePreset": "linux-ninja-multi-config",
			"configFile": "${sourceDir}/Builds/CPackConfig.cmake",
			"configurations": ["Release"],
			"output": {
				"debug": false
			}
		},
		{
			"name": "linux-ninja-multi-config-all",
			"hidden": false,
			"displayName": "Build (All)",
			"description": "Linux Package Preset for all build types using Ninja Multi-Config generator.",
			"inherits": "linux-base",
			"configurePreset": "linux-ninja-multi-config",
			"configFile": "${sourceDir}/Builds/CPackConfig.cmake",
			"configurations": [ "Debug", "Release"]
		}
	],
	"workflowPresets": [
    {
      "name": "linux-ninja-multi-config-all",
			"displayName": "Linux Ninja Multi-Config (All)",
			"description": "Linux Ninja Multi-Config (All) Workflow preset",
      "steps": [
        {
          "type": "configure",
          "name": "linux-ninja-multi-config"
        },
        {
          "type": "build",
          "name": "linux-ninja-multi-config-debug-verbose"
        },
        {
          "type": "test",
          "name": "linux-ninja-multi-config-debug"
        },
        {
          "type": "build",
          "name": "linux-ninja-multi-config-release"
        },
        {
          "type": "test",
          "name": "linux-ninja-multi-config-release"
        },
        {
          "type": "package",
          "name": "linux-ninja-multi-config-all"
        },
        {
          "type": "package",
          "name": "linux-ninja-multi-config-source"
        }
      ]
    },
		{
      "name": "linux-ninja-multi-config-debug",
			"displayName": "Linux Ninja Multi-Config (Debug)",
			"description": "Linux Ninja Multi-Config (Debug) Workflow preset",
      "steps": [
        {
          "type": "configure",
          "name": "linux-ninja-multi-config"
        },
        {
          "type": "build",
          "name": "linux-ninja-multi-config-debug-verbose"
        },
        {
          "type": "test",
          "name": "linux-ninja-multi-config-debug"
        },
        {
          "type": "package",
          "name": "linux-ninja-multi-config-debug"
        }
      ]
    },
		{
      "name": "linux-ninja-multi-config-release",
			"displayName": "Linux Ninja Multi-Config (Release)",
			"description": "Linux Ninja Multi-Config (Release) Workflow preset",
      "steps": [
        {
          "type": "configure",
          "name": "linux-ninja-multi-config"
        },
        {
          "type": "build",
          "name": "linux-ninja-multi-config-release"
        },
        {
          "type": "test",
          "name": "linux-ninja-multi-config-release"
        },
        {
          "type": "package",
          "name": "linux-ninja-multi-config-release"
        }
      ]
    }
  ]
}
